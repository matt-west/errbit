- content_for :title, 'Users'
- content_for :action_bar do
  .btn-toolbar
    .btn-group
      %a{ :class => 'btn btn-primary', :href => new_user_path }
        %i{ :class => 'icon-plus-sign icon-white' }
        Add New User

%table.table.table-striped
  %thead
    %tr
      %th Name
      - if Errbit::Config.user_has_username
        %th Username
      %th.main Email
      %th Admin?
  %tbody
    - @users.each do |user|
      %tr
        %td.nowrap= link_to user.name, user_path(user)
        - if Errbit::Config.user_has_username
          %td= user.username
        %td= user.email
        %td= user.admin? ? 'Y' : 'N'
= paginate @users

